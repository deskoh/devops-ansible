# {{ ansible_managed }}
{% if domain_name is defined %}
domain {{domain_name}}
{% endif %}
{% for nameserver in dns_servers %}
nameserver {{nameserver}}
{% endfor %}
{% if dns_searchs is defined %}
search {% for name in dns_searchs %}{{name}} {% endfor %}
{% endif %}

{% for options in dns_options %}
options {{options}}
{% endfor %}
